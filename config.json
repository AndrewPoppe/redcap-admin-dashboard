{
  "name": "Admin Dashboard",
  "description": "Provides a sortable table view of various reports on REDCap metadata (users, projects, etc).",
  "documentation": "README.md",

  "namespace": "UIOWA\\AdminDash",


  "authors": [
    {
      "name": "Eric Neuhaus",
      "email": "eric-neuhaus@uiowa.edu",
      "institution": "University of Iowa Institute for Clinical and Translational Science"
    }
  ],

  "links": {
    "control-center": [
      {
        "name": "Admin Dashboard",
        "icon": "table",
        "url": "index.php"
      }
    ]
  },

  "system-settings": [
    {
      "key": "show-archived-projects",
      "name": "Show archived projects",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "show-deleted-projects",
      "name": "Show deleted projects",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "csv-display-pids",
      "name": "Display project lists as PIDs instead of titles in CSV file",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "optional-reports",
      "name": "<b>Enable/Disable optional reports:</b>",
      "type": "descriptive",
      "required": false
    },
    {
      "key": "optional-report-modules",
      "name": "<ul><i>External Modules by Project</i><br>List of External Modules and the projects they are enabled in",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "optional-report-passwords",
      "name": "<ul><i>Login Credentials Check</i><br>Reports to search for strings related to REDCap usernames/passwords in projects",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "optional-report-settings",
      "name": "<b>Settings specific to optional reports:</b>",
      "type": "descriptive",
      "required": false
    },
    {
      "key": "additional-search-terms",
      "name": "Additional search term for Login Credentials Check reports (use % for wildcard)",
      "type": "text",
      "required": false,
      "repeatable": true
    }
  ]
}
