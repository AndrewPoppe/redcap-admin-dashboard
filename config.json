{
  "name": "Admin Dashboard",
  "description": "Provides a sortable table view of various reports on REDCap metadata (users, projects, etc). Includes a number of built-in reports as well as support for custom SQL queries.",
  "documentation": "README.md",

  "namespace": "UIOWA\\AdminDash",


  "authors": [
    {
      "name": "Eric Neuhaus",
      "email": "eric-neuhaus@uiowa.edu",
      "institution": "University of Iowa Institute for Clinical and Translational Science"
    }
  ],

  "links": {
    "control-center": [
      {
        "name": "Admin Dashboard",
        "icon": "table",
        "url": "index.php"
      }
    ]
  },

  "system-settings": [
    {
      "key": "default-report",
      "name": "Default report view",
      "type": "dropdown",
      "required": false,
      "choices": [
        {"value": 0, "name": ""},
        {"value": 1, "name": "Projects by User"},
        {"value": 2, "name": "Users by Project"},
        {"value": 3, "name": "Research Projects"},
        {"value": 4, "name": "Development Projects"},
        {"value": 5, "name": "All Projects"}
      ]
    },
    {
      "key": "show-practice-projects",
      "name": "Show \"Practice / Just for Fun\" projects",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "show-archived-projects",
      "name": "Show archived projects",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "show-deleted-projects",
      "name": "Show deleted projects",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "show-suspended-tags",
      "name": "Mark suspended usernames with red [suspended] tag",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "csv-display-pids",
      "name": "Display project lists as PIDs instead of titles in CSV file",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "optional-reports",
      "name": "<b>Enable/Disable optional reports:</b>",
      "type": "descriptive",
      "required": false
    },
    {
      "key": "optional-report-modules",
      "name": "<ul><i>Projects with External Modules</i><br>List of External Modules and the projects they are enabled in",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "optional-report-passwords",
      "name": "<ul><i>Login Credentials Check</i><br>Reports to search for strings related to REDCap usernames/passwords in projects",
      "type": "checkbox",
      "required": false
    },
    {
      "key": "optional-reports-settings",
      "name": "<b>Additional configuration for optional reports:</b>",
      "type": "descriptive",
      "branchingLogic": {
        "field": "optional-report-passwords",
        "value": "true"
      },
      "required": false
    },
    {
      "key": "additional-search-terms",
      "name": "Additional search term for Login Credentials Check reports",
      "type": "text",
      "branchingLogic": {
        "field": "optional-report-passwords",
        "value": "true"
      },
      "required": false,
      "repeatable": true
    },
    {
      "key": "custom-reports",
      "name": "<b>Define custom reports (see documentation for more info):</b>",
      "type": "descriptive",
      "required": false
    },
    {
      "key": "custom-report",
      "name": "Define custom report",
      "type": "sub_settings",
      "required": false,
      "repeatable": true,
      "sub_settings":[
        {
          "key": "custom-report-name",
          "name": "Report Name",
          "type": "text"
        },
        {
          "key": "custom-report-desc",
          "name": "Report Description",
          "type": "text"
        },
        {
          "key": "custom-report-icon",
          "name": "Report Icon",
          "type": "text"
        },
        {
          "key": "custom-report-sql",
          "name": "Report SQL",
          "type": "textarea"
        },
        {
          "key": "custom-report-enabled",
          "name": "Report Enabled",
          "type": "checkbox"
        }
      ]
    }
  ]
}
